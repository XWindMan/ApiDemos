<set xmlns:android="http://schemas.android.com/apk/res/android">
    <!--从父控件y轴的100%处开始到0位置-->
    <translate
        android:duration="300"
        android:fromYDelta="100%p"
        android:toYDelta="0" />
    <!--透明度从完全透明到完全不透明-->
    <alpha
        android:duration="300"
        android:fromAlpha="0.0"
        android:toAlpha="1.0" />
</set>
